<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#778899"
	android:orientation="vertical"
	android:padding="20dp">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:text="SAMPLE TEXT"
		android:textColor="#FFFFFF"
		android:textSize="30dp"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:text="Iorem ipsum dolor sit amet"
		android:letterSpacing="0.35"
		android:textColor="#FFFFFF"
		android:textSize="9dp"/>

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="90dp"
		android:layout_height="90dp"
		android:layout_marginTop="30dp"
		android:padding="12dp"
		android:layout_gravity="center"
		android:background="@drawable/profilephoto_background"
		android:src="@drawable/profilephoto"/>

	<TextView
		android:id="@+id/textView4"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:gravity="center_horizontal"
		android:text="LOG IN"
		android:textColor="#FFFFFF"
		android:textSize="20dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="50dp"
			android:layout_height="match_parent"
			android:src="@drawable/profile"
			android:layout_marginTop="5dp"
			android:background="#8dd8e6"
			android:padding="9dp"/>

		<EditText
			android:id="@+id/etName"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#FFFFFF"
			android:hint="Name"
			android:paddingLeft="10dp"
			android:layout_marginTop="5dp"
			android:singleLine="true"/>

	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/imageView2"
			android:layout_width="50dp"
			android:layout_height="match_parent"
			android:layout_marginTop="5dp"
			android:src="@drawable/lock"
			android:background="#8dd8e6"/>

		<EditText
			android:id="@+id/etPass"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#FFFFFF"
			android:hint="Password"
			android:password="true"
			android:paddingLeft="10dp"
			android:layout_marginTop="5dp"
			android:singleLine="true"/>

</LinearLayout>


	<CheckBox
		android:id="@+id/checkBox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="40dp"
		android:checked="false"
		android:shadowColor="@android:color/holo_blue_bright"
		android:text="Remember me"
		android:textColor="#FFFFFF"
		android:textColorLink="#8dd8e6"
		android:textSize="18dp"
		android:buttonTint="#8dd8e6"/>


	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Forgot your password?"
		android:textColor="#c0c0c0"
		android:textSize="20dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="30dp"/>

	<Button
		android:id="@+id/nextBtn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="NEXT"
		android:background="#8dd8e6"
		android:layout_marginTop="65dp"
		android:textColor="#FFFFFF"/>

	<TextView
		android:id="@+id/textView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Lorem ipsum dolor sit amet im fetuni deziren lucina."
		android:textColor="#FFFFFF"
		android:gravity="center_horizontal"
		android:layout_marginTop="15dp"/>



</LinearLayout>

